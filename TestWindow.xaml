<Window x:Class="OpenMeido.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="测试窗口" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="20" VerticalAlignment="Center">
            <TextBlock Text="OpenMeido AI助手测试" FontSize="16" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>
            
            <Button x:Name="TestSettingsButton" Content="测试设置功能" 
                    Padding="10" Margin="5" Click="TestSettingsButton_Click"/>
            
            <Button x:Name="TestChatButton" Content="测试聊天功能" 
                    Padding="10" Margin="5" Click="TestChatButton_Click"/>
            
            <Button x:Name="TestApiButton" Content="测试API配置"
                    Padding="10" Margin="5" Click="TestApiButton_Click"/>

            <Button x:Name="OpenDebugButton" Content="打开API调试工具"
                    Padding="10" Margin="5" Click="OpenDebugButton_Click"
                    Background="Orange" Foreground="White"/>

            <TextBlock x:Name="StatusText" Text="就绪"
                       HorizontalAlignment="Center" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
